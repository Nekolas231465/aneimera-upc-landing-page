---
import NotFound from "../../components/NotFound.astro";
import PastVisitCard from "../../components/PastVisitCard.astro";
import { cards } from "../../data/PastTechnicalVisits";

---

<section class="pb-16 md:pb-20 bg-blanco">
    <div class="section-container">
        <h1 class="text-2xl md:text-3xl text-black font-medium">
            Visitas t√©cnicas pasadas:
        </h1>
        {cards.length > 0 ? (
            <div class="mt-10 grid grid-cols-1 md:grid-cols-2 grid-rows-auto gap-12">
