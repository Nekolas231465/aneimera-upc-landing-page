---
import NotFound from "../../components/NotFound.astro";
import VisitCard from "../../components/VisitCard.astro";
import { cards } from "../../data/VisitCards";
---

<section class="py-16 md:py-20 bg-blanco">
    <div class="section-container">
        <h2 class="font-semibold uppercase text-black">Visitas t√©cnicas programadas:</h2>
        {
            cards.length > 0 ? (
                <div class="mt-10 grid grid-cols-1 md:grid-cols-2 grid-rows-auto gap-12">
                    {cards.map((card) => (
                        <VisitCard {...card} />
                    ))}
                </div>
            ) : (
                <NotFound />
            )
        }
    </div>
</section>
