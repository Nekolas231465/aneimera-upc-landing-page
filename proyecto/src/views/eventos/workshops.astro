---
import type { Code } from "astro:components";
import Card from "../../components/Card.astro";
import { cards } from "../../data/cards.js";
---

<section class="py-20 bg-rojo">
    <div class="section-container">
        <h1 class="text-2xl text-blanco font-medium">Talleres Disponibles:</h1>
        <div
            class="mt-10 grid grid-cols-1 md:grid-cols-2 grid-rows-auto gap-12"
        >
            {cards.map((card) => <Card {...card} />)}
        </div>
    </div>
</section>
